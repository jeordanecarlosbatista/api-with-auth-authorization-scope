{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "node": "current"
                }
            }
        ],
        "@babel/preset-typescript"
    ],
    "plugins": [
        [
            "module-resolver", {
                "root": ["./src"],
                "alias": {
                    "@data": "./src/data",
                    "@domain": "./src/domain",
                    "@main": "./src/main",
                    "@presentation": "./src/presentation",
                    "@validation": "./src/validation",
                    "@infra": "./src/infra",
                    "@test": "./__tests__"
                }
            }
        ]
    ]
}